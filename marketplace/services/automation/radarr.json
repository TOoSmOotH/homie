{
  "id": "radarr",
  "name": "Radarr",
  "version": "5.2.6",
  "author": "Radarr Team",
  "description": "Connect to Radarr for movie collection management and automation",
  "longDescription": "Integrate with your Radarr instance to monitor downloads, manage your movie library, search for releases, and control your automation from Homie.",
  "category": "automation",
  "tags": ["movies", "automation", "download", "usenet", "torrent", "media-management"],
  "icon": "üé¨",
  "homepage": "https://radarr.video",
  "documentation": "https://wiki.servarr.com/radarr",
  "features": [
    {
      "id": "movie_management",
      "name": "Movie Library",
      "description": "Manage your movie collection",
      "icon": "üé¨",
      "capabilities": [
        "View all movies",
        "Add new movies",
        "Edit movie settings",
        "Delete movies",
        "Search for releases"
      ]
    },
    {
      "id": "download_queue",
      "name": "Download Queue",
      "description": "Monitor and manage downloads",
      "icon": "üì•",
      "capabilities": [
        "View active downloads",
        "Monitor progress",
        "Remove from queue",
        "Force re-download",
        "Manual import"
      ]
    },
    {
      "id": "calendar",
      "name": "Release Calendar",
      "description": "Track upcoming movie releases",
      "icon": "üìÖ",
      "capabilities": [
        "View release schedule",
        "Filter by status",
        "See digital/physical dates",
        "Auto-download setup"
      ]
    },
    {
      "id": "indexer_management",
      "name": "Indexer Stats",
      "description": "Monitor indexer performance",
      "icon": "üîç",
      "capabilities": [
        "View indexer status",
        "Success/failure rates",
        "Response times",
        "Test connections"
      ]
    },
    {
      "id": "quality_profiles",
      "name": "Quality Management",
      "description": "Control download quality settings",
      "icon": "üéØ",
      "capabilities": [
        "View quality profiles",
        "Preferred qualities",
        "Size limits",
        "Upgrade policies"
      ]
    },
    {
      "id": "system_health",
      "name": "System Health",
      "description": "Monitor Radarr system status",
      "icon": "‚ù§Ô∏è",
      "capabilities": [
        "Health checks",
        "Disk space",
        "Update status",
        "Log monitoring"
      ]
    }
  ],
  "connection": {
    "type": "api",
    "auth": "apikey",
    "fields": [
      {
        "key": "url",
        "label": "Radarr URL",
        "type": "url",
        "required": true,
        "placeholder": "http://192.168.1.100:7878",
        "description": "Full URL to your Radarr instance"
      },
      {
        "key": "api_key",
        "label": "API Key",
        "type": "password",
        "required": true,
        "description": "Found in Settings > General > Security"
      }
    ]
  },
  "api": {
    "headers": {
      "X-Api-Key": "{api_key}"
    },
    "endpoints": {
      "movies": "/api/v3/movie",
      "queue": "/api/v3/queue",
      "calendar": "/api/v3/calendar",
      "history": "/api/v3/history",
      "wanted": "/api/v3/wanted/missing",
      "system_status": "/api/v3/system/status",
      "health": "/api/v3/health",
      "quality_profiles": "/api/v3/qualityprofile",
      "indexer_stats": "/api/v3/indexer/stats"
    }
  },
  "quickActions": [
    {
      "id": "search_missing",
      "name": "Search Missing Movies",
      "icon": "üîç",
      "action": "api_call",
      "endpoint": "/api/v3/command",
      "payload": {"name": "MissingMoviesSearch"}
    },
    {
      "id": "rss_sync",
      "name": "RSS Sync",
      "icon": "üîÑ",
      "action": "api_call",
      "endpoint": "/api/v3/command",
      "payload": {"name": "RssSync"}
    },
    {
      "id": "backup",
      "name": "Backup Database",
      "icon": "üíæ",
      "action": "api_call",
      "endpoint": "/api/v3/command",
      "payload": {"name": "Backup"}
    }
  ],
  "widgets": [
    {
      "id": "download_queue",
      "name": "Active Downloads",
      "type": "list",
      "refresh": 10000,
      "size": "medium"
    },
    {
      "id": "upcoming_movies",
      "name": "Coming Soon",
      "type": "calendar",
      "refresh": 3600000,
      "size": "large"
    },
    {
      "id": "missing_movies",
      "name": "Missing Movies",
      "type": "counter",
      "refresh": 60000,
      "size": "small"
    }
  ],
  "settings": {
    "sections": [
      {
        "id": "display",
        "name": "Display Settings",
        "icon": "üé®",
        "fields": [
          {
            "key": "show_queue",
            "label": "Show Download Queue",
            "type": "boolean",
            "default": true,
            "description": "Display active downloads on the dashboard"
          },
          {
            "key": "show_upcoming",
            "label": "Show Upcoming Movies",
            "type": "boolean",
            "default": true,
            "description": "Display upcoming movies calendar"
          },
          {
            "key": "show_missing",
            "label": "Show Missing Movies",
            "type": "boolean",
            "default": true,
            "description": "Display count of missing movies"
          },
          {
            "key": "max_items",
            "label": "Maximum Items to Display",
            "type": "number",
            "default": 10,
            "min": 5,
            "max": 50,
            "description": "Maximum number of items to show in lists"
          }
        ]
      },
      {
        "id": "monitoring",
        "name": "Monitoring",
        "icon": "üìä",
        "fields": [
          {
            "key": "enable_notifications",
            "label": "Enable Notifications",
            "type": "boolean",
            "default": false,
            "description": "Send notifications for downloads and errors"
          },
          {
            "key": "check_health",
            "label": "Monitor System Health",
            "type": "boolean",
            "default": true,
            "description": "Check for Radarr system health issues"
          },
          {
            "key": "sync_interval",
            "label": "Sync Interval (minutes)",
            "type": "number",
            "default": 30,
            "min": 5,
            "max": 120,
            "description": "How often to sync with Radarr"
          }
        ]
      },
      {
        "id": "automation",
        "name": "Automation",
        "icon": "ü§ñ",
        "fields": [
          {
            "key": "auto_search",
            "label": "Auto-Search for Missing",
            "type": "boolean",
            "default": false,
            "description": "Automatically search for missing movies"
          },
          {
            "key": "auto_search_interval",
            "label": "Auto-Search Interval (hours)",
            "type": "number",
            "default": 24,
            "min": 1,
            "max": 168,
            "description": "Hours between automatic searches",
            "depends_on": "auto_search",
            "show_if": true
          },
          {
            "key": "quality_profile",
            "label": "Default Quality Profile",
            "type": "select",
            "options": "dynamic",
            "description": "Quality profile for new movies"
          }
        ]
      }
    ]
  }
}