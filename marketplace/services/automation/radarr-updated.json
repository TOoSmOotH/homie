      ]
    },
    {
      "id": "calendar",
      "name": "Release Calendar",
      "description": "Track upcoming movie releases",
      "icon": "üìÖ",
      "capabilities": [
        "View release schedule",
        "Filter by status",
        "See digital/physical dates",
        "Auto-download setup"
      ]
    },
    {
      "id": "indexer_management",
      "name": "Indexer Stats",
      "description": "Monitor indexer performance",
      "icon": "üîç",
      "capabilities": [
        "View indexer status",
        "Success/failure rates",
        "Response times",
        "Test connections"
      ]
    },
    {
      "id": "quality_profiles",
      "name": "Quality Management",
      "description": "Control download quality settings",
      "icon": "üéØ",
      "capabilities": [
        "View quality profiles",
        "Preferred qualities",
        "Size limits",
        "Upgrade policies"
      ]
    },
    {
      "id": "system_health",
      "name": "System Health",
      "description": "Monitor Radarr system status",
      "icon": "‚ù§Ô∏è",
      "capabilities": [
        "Health checks",
        "Disk space",
        "Update status",
        "Log monitoring"
      ]
    }
  ],
  "connection": {
    "type": "api",
    "auth": "apikey",
    "fields": [
      {
        "key": "url",
        "label": "Radarr URL",
        "type": "url",
        "required": true,
        "placeholder": "http://192.168.1.100:7878",
        "description": "Full URL to your Radarr instance"
      },
      {
        "key": "api_key",
        "label": "API Key",
        "type": "password",
        "required": true,
        "description": "Found in Settings > General > Security"
      }
    ]
  },
  "api": {
    "headers": {
      "X-Api-Key": "{api_key}"
    },
    "endpoints": {
      "movies": "/api/v3/movie",
      "queue": "/api/v3/queue",
      "calendar": "/api/v3/calendar",
      "history": "/api/v3/history",
      "wanted": "/api/v3/wanted/missing",
      "system_status": "/api/v3/system/status",
      "health": "/api/v3/health",
      "quality_profiles": "/api/v3/qualityprofile",
      "indexer_stats": "/api/v3/indexer/stats"
    }
  },
  "quickActions": [
    {
      "id": "search_missing",
      "name": "Search Missing Movies",
      "icon": "üîç",
      "action": "api_call",
      "endpoint": "/api/v3/command",
      "payload": {"name": "MissingMoviesSearch"}
    },
    {
      "id": "rss_sync",
      "name": "RSS Sync",
      "icon": "üîÑ",
      "action": "api_call",
      "endpoint": "/api/v3/command",
      "payload": {"name": "RssSync"}
    },
    {
      "id": "backup",
      "name": "Backup Database",
      "icon": "üíæ",
      "action": "api_call",
      "endpoint": "/api/v3/command",
      "payload": {"name": "Backup"}
    }
  ],
  "widgets": [
    {
      "id": "download_queue",
      "name": "Active Downloads",
      "type": "list",
      "refresh": 10000,
      "size": "medium"
    },
    {
      "id": "upcoming_movies",
      "name": "Coming Soon",
      "type": "calendar",
      "refresh": 3600000,
      "size": "large"
    },
    {
      "id": "missing_movies",
      "name": "Missing Movies",
      "type": "counter",
      "refresh": 60000,
      "size": "small"
    }
  ]
}